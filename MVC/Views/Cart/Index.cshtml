@model MVC.ViewModel.CreateOrderHeaderViewModel

@{
    ViewData["Title"] = "Index";
}
@if (ViewBag.Carts.Count > 0)
{
    @foreach (var item in ViewBag.Carts)
    {
        var base64 = Convert.ToBase64String(item.Room.PictureImg);
        var imgsrc = string.Format("data:image/jpg;base64,{0}", base64);









        <div class="card mb-3" >
            <div class="row no-gutters">
                <div class="col-md-4">
                    <img src="@imgsrc" class="card-img" alt="...">
                </div>
                <div class="col-md-4">
                    <div class="card-body">
                   
                          
  
  <ul class="list-group list-group-flush">
 
    <li class="list-group-item">FromDate @item.FromDate</li>
    
    <li class="list-group-item">To Date @item.ToDate</li>
    <li class="list-group-item">Total Days @item.TotalDays</li>
    <li class="list-group-item"> Price For Day @item.Room.price $</li>

    <li class="list-group-item">Total Price @item.TotalPrice $</li>
     
          
  </ul>
   <div class="row">
      <a class="nav-link text-white bg-danger col-3 m-3" asp-area="" asp-controller="Cart" asp-action="Delete" asp-route-id="@item.Id">Cancel</a>
     <a class="nav-link text-white bg-danger col-3 m-3" asp-area="" asp-controller="Cart" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
          </div> 
     </div>  </div>  </div>  </div> 
     
               
    
                    
    }
    <div class="card bg-danger text-center text-white">
  <div class="card-body">
   Total Payment is  @Model.OrderTotal
  </div>
</div>

  <hr />
    <hr />

    <div class="col text-center ">
        <div class="card bg-success text-white">
            <div class="card-body">For  Reservation please enter your data</div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-9">
            <form asp-action="Create" asp-controller="Order">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <input asp-for="Id" class="form-control" hidden />
                <input asp-for="OrderStatus" class="form-control" hidden />
                <input asp-for="OrderTotal" class="form-control" hidden />
                <input asp-for="DateOfOrder" class="form-control" hidden />
                <input asp-for="CustomerId" class="form-control" hidden/>

                <div class="form-group">
                    <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="City" class="control-label"></label>
                    <input asp-for="City" class="form-control" />
                    <span asp-validation-for="City" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Address" class="control-label"></label>
                    <input asp-for="Address" class="form-control" />
                    <span asp-validation-for="Address" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-action="Index">Back to List</a>
    </div>
}
else
{
    <div class="container">
  <div class="row justify-content-center align-items-center">
     <div class="col ">
         <div class="card bg-success text-white">
    <div class="card-body">No Carts Here Now</div>
  </div>
  </div>
  </div>
  </div>
}
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}


